			<version>2.6</version>
		</dependency>
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20080701</version>
		</dependency>
		<dependency>
			<groupId>internationalized</groupId>
			<artifactId>han2pinyin</artifactId>
			<version>1.2.18</version>
		</dependency>

